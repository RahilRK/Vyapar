<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin8"
    android:paddingEnd="@dimen/margin8"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4">

            <TextView
                android:id="@+id/partyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp16"
                android:singleLine="true"
                android:text="@string/party_name"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="@string/amount"
                android:textAlignment="textStart"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4">

            <TextView
                android:id="@+id/lastPaymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/textColorHigh"
                android:textSize="@dimen/sp16"
                android:singleLine="true"
                android:text="@string/date"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/giveGet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/sp16"
                android:singleLine="true"
                android:text="@string/amount"
                android:textAlignment="textStart"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin1"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginBottom="@dimen/margin4"
            android:background="@color/dividerColor"
            />
    </LinearLayout>

</LinearLayout>