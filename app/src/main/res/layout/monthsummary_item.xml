<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin4"
        android:elevation="@dimen/margin4"
        android:layout_margin="@dimen/margin8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin16">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="@dimen/margin24"
                android:layout_height="@dimen/margin24"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/margin8"
                android:src="@drawable/vyapar_app_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_marginStart="@dimen/margin8"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin4"
                    android:textColor="@color/textColorHigh"
                    android:textSize="@dimen/sp16"
                    android:singleLine="true"
                    android:text="@string/title"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin4"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp18"
                    android:singleLine="true"
                    android:text="@string/amount"
                    android:textAlignment="textStart"/>

            </LinearLayout>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>