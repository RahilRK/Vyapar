<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin8"
    android:paddingEnd="@dimen/margin8"
    android:layout_marginStart="@dimen/margin4"
    android:layout_marginEnd="@dimen/margin4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4">

            <TextView
                android:id="@+id/partyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/party_name"
                android:textAlignment="textStart"
                android:textColor="@color/textColor"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/transactionType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_curve_greenbg"
                android:padding="@dimen/margin4"
                android:singleLine="true"
                android:text="@string/sales"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="@color/successColor"
                android:textSize="@dimen/sp14"
                android:letterSpacing="0.2"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4"
            android:singleLine="true"
            android:text="@string/date"
            android:textColor="@color/textColorHigh"
            android:textAlignment="textStart"
            android:textSize="@dimen/sp14"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin12"
            >

            <LinearLayout
                android:id="@+id/totalLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/margin24"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/total"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp16" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin4"
                    android:singleLine="true"
                    android:text="@string/demo_amount"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/sp16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/balanceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/totalLayout"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/balanceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/balance"
                    android:textColor="@color/textColor"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp16"
                    />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin4"
                    android:singleLine="true"
                    android:text="@string/demo_amount"
                    android:textColor="@color/textColor"
                    android:textAllCaps="true"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/sp16"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivPrint"
                android:layout_width="@dimen/margin24"
                android:layout_height="@dimen/margin24"
                android:layout_toStartOf="@id/ivShare"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_printing"
                android:layout_marginEnd="@dimen/margin24"
                app:tint="@color/gray"
                />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/margin24"
                android:layout_height="@dimen/margin24"
                android:layout_toStartOf="@id/ivMenu"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_share"
                android:layout_marginEnd="@dimen/margin16"
                app:tint="@color/gray"
                />

            <ImageView
                android:id="@+id/ivMenu"
                android:layout_width="@dimen/margin24"
                android:layout_height="@dimen/margin24"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_dots"
                android:layout_alignParentEnd="true"
                app:tint="@color/gray"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin1"
            android:layout_marginTop="@dimen/margin8"
            android:layout_marginBottom="@dimen/margin4"
            android:background="@color/dividerColor"
            />
    </LinearLayout>

</LinearLayout>